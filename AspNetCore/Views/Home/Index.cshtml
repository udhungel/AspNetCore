@model IEnumerable<Employee>

@{    
    ViewBag.Title = "Employee Page";

}

<div class="card-deck">
      @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width : 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumnail" src=@photoPath asp-append-version="true" />
            <div class=" cardcard-footer text-center">
                <a asp-controller="home" asp-action="details" asp-rout-id="@employee.Id" class=" btn btn-primary m-0 ">View</a>
                <a href="#" class="btn btn-primary m-0 ">Edit</a>
                <a href="#" class="btn btn-primary m-0">Delete</a>
            </div>
        </div>
            
     }
</div>

