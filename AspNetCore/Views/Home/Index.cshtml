@model IEnumerable<Employee>

@{    
    ViewBag.Title = "Employee Page";
}

<div class="card-deck">
      @foreach (var employee in Model)
    { 
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/noimage.jpg"/>
            <div class=" cardcard-footer text-center">
              @*  Since both belong to same controller by default it will look for home controller 
                so <a-asp-controller = "home" is not need but to be explicit I am just leaving it there*@  
                <a asp-controller="home" asp-action="details" class=" btn btn-primary">View</a>                
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
            
     }
</div>

